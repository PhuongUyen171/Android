@model WebAdmin.Models.LOAISP
@{
    ViewBag.Title = "Thông tin chi tiết loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>CHI TIẾT LOẠI SẢN PHẨM</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-content-section">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="devit-card-custom">
                            <div class="form-group">
                                Mã loại sản phẩm:
                                @Html.TextBoxFor(model => model.MaLoaiSP, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                            <div class="form-group">
                                Tên loại sản phẩm:
                                @Html.TextBoxFor(model => model.TenLoaiSP, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                            <a href="@Url.Action("SuaLoaiSP", new { id=Model.MaLoaiSP})" class="btn btn-primary waves-effect waves-light">Edit</a>
                            <a href="@Url.Action("Index")" class="btn btn-primary waves-effect waves-light">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

