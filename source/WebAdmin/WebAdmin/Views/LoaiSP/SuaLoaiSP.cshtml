@model WebAdmin.Models.LOAISP
@{
    ViewBag.Title = "Chỉnh sửa loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>CHỈNH SỬA LOẠI SẢN PHẨM</h2>

@using (Html.BeginForm("SuaLoaiSP", "LoaiSP", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.HiddenFor(model => model.MaLoaiSP)
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-content-section">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="devit-card-custom">
                            <div class="form-group">
                                Mã loại SP:
                                @Html.TextBoxFor(model => model.MaLoaiSP, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                            <div class="form-group">
                                Tên loại SP:
                                @Html.TextBoxFor(model => model.TenLoaiSP, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.TenLoaiSP, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                            <a href="@Url.Action("Index")" class="btn btn-primary waves-effect waves-light">Back to List</a>
                            <div class="warning">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


