@model WebAdmin.Models.LOAISP
@{
    ViewBag.Title = "Tạo mới loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TẠO MỚI LOẠI SẢN PHẨM</h2>

@using (Html.BeginForm("TaoMoiLoaiSP", "LoaiSP", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-content-section">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="devit-card-custom">
                            <!--Tên loại sản phẩm-->
                            <div class="form-group">
                                @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên loại sản phẩm" } })
                                @Html.ValidationMessageFor(m => m.TenLoaiSP, "", new { @class = "text-danger" })
                            </div>
                            <!--Hình ảnh-->
                            <div class="form-group">
                                <input type="file" name="HinhAnh" id="HinhAnh" class="form-control" />
                                @Html.ValidationMessage("HinhAnh", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                            <a href="@Url.Action("Index")" class="btn btn-primary waves-effect waves-light">Back to List</a>
                            <div class="warning">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

