@{
    ViewBag.Title = "Quản lý loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WebAdmin.Models.LOAISP>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            console.log("key up");
            var value = $(this).val().toLowerCase();
            $("#tableLSP tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">

            <h5 class="card-header">
                <font style="font-size:25px">QUẢN LÝ LOẠI SẢN PHẨM</font>
                <a href="@Url.Action("TaoMoiLoaiSP")" class="btn btn-primary waves-effect waves-light" style="float:right">Tạo mới</a>
            </h5>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="custom-search" class="top-search-bar" style="padding-bottom:10px;">
                        <input class="form-control" type="text" id="searchInput" placeholder="Nhập loại sản phẩm ...">
                    </div>
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="tableLSP">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaLoaiSP</td>
                                    <td><a href="@Url.Action("ChiTietLoaiSP",new { id=item.MaLoaiSP})" style="text-decoration:none;">@item.TenLoaiSP</a></td>
                                    <td><img src="~/Content/Images/LoaiSP/@item.HinhAnh" /></td>
                                    <td>
                                        <a href="@Url.Action("SuaLoaiSP",new { id=item.MaLoaiSP})" class="btn btn-success">Edit</a>
                                        <a href="@Url.Action("ChiTietLoaiSP",new { id=item.MaLoaiSP})" class="btn btn-secondary">Detail</a>
                                        <a href="@Url.Action("XoaLoaiSP",new { id=item.MaLoaiSP})" class="btn btn-brand">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

