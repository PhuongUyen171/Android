@model WebAdmin.Models.NHANVIEN
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        .alert-message {
            position: relative;
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }

            .alert-message.success {
                background-color: #4CAF50;
            }

            .alert-message.info {
                background-color: #2196F3;
            }

            .alert-message.warning {
                background-color: #ff9800;
            }
    </style>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Content/alert.js"></script>
</head>

<body>
    
    <div class="splash-container">
        @if (TempData["DangerMessage"] != null)
        {
            <div class="alert-message" role="alert">
                <strong>Thông báo!</strong> @TempData["DangerMessage"]
            </div>
        }
        <div class="card ">
            <div class="card-header text-center"><a href="../Home/Index"><font style="font-size:16px;">LOGIN</font></a><span class="splash-description">Please enter your user information.</span></div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.TaiKhoan, new { @placeholder = "Tên đăng nhập", @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.MatKhau, new { @placeholder = "Mật khẩu", @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(model => model.RememberMe, new { @class = "custom-control-input" })<span class="custom-control-label">Remember Me</span>
                            </label>
                        </div>
                        <button class="btn btn-primary btn-lg btn-block">Log in</button>
                    </form>
                }
            </div>
        </div>
    </div>
    <script src="~/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>

</html>

