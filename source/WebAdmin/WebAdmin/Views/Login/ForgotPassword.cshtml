@model WebAdmin.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
    <div class="splash-container">
        <div class="card">
            <div class="card-header text-center">FORGOT PASSWORD<span class="splash-description">Please enter your user information.</span></div>
            <div class="card-body">
                @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form>
                        <p>Don't worry, we'll send you an email to reset your password.</p>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Your email ...", @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })<br />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
                        </div>
                        <div class="form-group pt-1"><button type="submit" class="btn btn-primary btn-lg btn-block">Reset Password</button></div>
                    </form>
                }
            </div>
        </div>
    </div>
    <script src="~/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
</body>
</html>