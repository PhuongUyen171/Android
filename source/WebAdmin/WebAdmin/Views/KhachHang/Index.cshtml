@model IEnumerable<WebAdmin.Models.KHACHHANG>
@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">

                <h5 class="card-header">
                    <font style="font-size:25px">QUẢN LÝ KHÁCH HÀNG</font>
                    <a href="@Url.Action("TaoMoiKhachHang")" class="btn btn-primary waves-effect waves-light" style="float:right">Tạo mới</a>
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaKH</td>
                                        <td>@item.TenKH</td>
                                        <td>
                                            <a href="@Url.Action("SuaKhachHang",new { id=item.MaKH})" class="btn btn-success">Edit</a>
                                            <a href="@Url.Action("ChiTietKhachHang",new { id=item.MaKH})" class="btn btn-secondary">Detail</a>
                                            <a href="@Url.Action("XoaKhachHang",new { id=item.MaKH})" class="btn btn-brand">Delete</a>
                                        </td>
                                    </tr>
                                }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

